// 2D Jacobi stencil iteration
// Classic iterative solver pattern

func jacobi_2d(A[N][N], B[N][N], T) {
    for t = 0 to T {
        for i = 1 to N - 1 {
            for j = 1 to N - 1 {
                B[i][j] = (A[i-1][j] + A[i+1][j] + A[i][j-1] + A[i][j+1]) / 4;
            }
        }
        for i = 1 to N - 1 {
            for j = 1 to N - 1 {
                A[i][j] = B[i][j];
            }
        }
    }
}
